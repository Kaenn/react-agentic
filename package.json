{
  "name": "react-agentic",
  "version": "0.1.0",
  "description": "Compile-time safety for Claude Code commands - malformed commands fail at build time, not runtime",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "react-agentic": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "watch": "node dist/cli/index.js build -w",
    "build:agentic": "node dist/cli/index.js build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "markdown",
    "tsx",
    "typescript",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "commander": "^14.0.2",
    "globby": "^16.1.0",
    "gray-matter": "^4.0.3",
    "picocolors": "^1.1.1",
    "ts-morph": "^27.0.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@types/react": "^19.1.6",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}